{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://unpkg.com/dc-accelerators-content-rendering-service/dist/contentTypes/at-product-cta-card-de.json",

	"title": "Product Card",
	"description": "Product Card CTA Carousel",

	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	
	"type": "object",
	"properties": {
		"products": {
			"title": "Product Selector",
			"description": "description",
			"type": "array",
			"minItems": 1,
			"maxItems": 1,
			"items": {
			"type": "string"
			},
			"ui:extension": {
				"name": "sfcc-product-selector-de"
			}
		},
		"ctaLink": {
			"title": "CTA Link",
			"type": "array",
			"minItems": 0,
			"maxItems": 1,
			"items": {
				"allOf": [
					{
						"$ref": "https://unpkg.com/dc-accelerators-content-rendering-service/dist/contentTypes/at-link.json"
					}
				]
			}
		}
	},
	"propertyOrder": [
		"products",
		"ctaLink"
	],
    "required": [
        "products"
    ]
}