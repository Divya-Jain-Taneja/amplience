{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://unpkg.com/dc-accelerators-content-rendering-service/dist/contentTypes/at-wof-card-eur.json",

	"title": "Walk Of Fame Card",
	"description": "Walk Of Fame Card",

	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	
	"type": "object",
	"properties": {
		"image": {
			"title": "Image",
			"allOf": [
				{ "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link" }
			]
		},
		"imageAltText": {
			"title": "Image Alt Text",
			"description": "Enter the alternate text for image.",
			"type": "string",
			"minLength": 0,
			"maxLength": 50
		},
		"title": {
			"title": "Title",
			"description": "Enter the title text for WOF card.",
			"type": "string"
		},
		"description": {
			"title": "Description",
			"description": "Enter the description text for WOF card.",
			"type": "string"
		},
		"productId": {
			"title": "Product Selector",
			"description": "description",
			"type": "array",
			"minItems": 1,
			"maxItems": 1,
			"items": {
			"type": "string"
			},
			"ui:extension": {
				"name": "sfcc-product-selector-eur"
			}
		},
        "imgAspectRatio": {
			"title": "Image Aspect Ratio:",
			"description": "Select image aspect ratio.",
			"type": "string",
			"ui:extension": {
				"name": "aspect-ratio-select-list"
			}
		},
        "mobileQuality": {
			"title": "Mobile Quality Parameters",
			"description": "Select mobile quality parameters.",
			"type": "string",
			"ui:extension": {
				"name": "required-drop-list",
				"params": {
					"options": [
						"very low",
						"low",
						"med",
						"high",
						"very high"
					],
				    "values": [
						"$qlt_very_low$",
						"$qlt_low$",
						"$qlt_med$",
						"$qlt_high$",
						"$qlt_very_high$"
					],
					"defaultIndex": 0
				}
			}
		},	
		"desktopQuality": {
			"title": "Desktop Quality Parameters",
			"description": "Select desktop quality parameters.",
			"type": "string",
			"ui:extension": {
				"name": "required-drop-list",
				"params": {
					"options": [
						"very low",
						"low",
						"med",
						"high",
						"very high"
					],
					"values": [
						"$qlt_very_low$",
						"$qlt_low$",
						"$qlt_med$",
						"$qlt_high$",
						"$qlt_very_high$"
					],
					"defaultIndex": 2
				}
			}
		}
	},
	"propertyOrder": [
		"image",
		"imageAltText",
		"title",
		"description",
		"productId",
        "imgAspectRatio",
        "mobileQuality",
        "desktopQuality"
	],
	"required": [
		"image",
		"imageAltText",
		"title",
		"description",
		"productId"
	]
}